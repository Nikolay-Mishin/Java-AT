<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.project</groupId>
    <artifactId>tests</artifactId>
    <version>7.14.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <utils.ver>7.14.1-SNAPSHOT</utils.ver>
        <src.dir>src/main</src.dir>
        <res.dir>${src.dir}/resources</res.dir>
        <!-- GitHub server corresponds to entry in ~/.m2/settings.xml -->
        <github.global.server>github</github.global.server>
        <github.global.url>https://${github.global.server}.com</github.global.url>
        <github.global.raw>https://raw.${github.global.server}.com</github.global.raw>
        <github.id>Nikolay-Mishin</github.id>
        <github.url>${github.global.url}/${github.id}</github.url>
        <github.name>Nikolay Mishin</github.name>
        <github.repo>Java-AT</github.repo>
        <github.branch>mvn-repo</github.branch>
        <github.merge>true</github.merge>
        <github.msg>Maven artifacts for ${project.version}</github.msg>
        <github.repo.url>${github.global.url}/${github.id}/${github.repo}/raw/${github.branch}</github.repo.url>
        <github.repo.raw>${github.global.raw}/${github.id}/${github.repo}/${github.branch}</github.repo.raw>
        <github.repo.snapshots>true</github.repo.snapshots>
        <github.repo.update>always</github.repo.update>
        <repo.id>internal.repo</repo.id>
        <repo.dir>repo</repo.dir>
        <repo.path>${basedir}/${repo.dir}</repo.path>
        <repo.url>file://${repo.path}</repo.url>
        <repo.name>org/project</repo.name>
        <repo.artifact.dir>${repo.name}/${project.artifactId}</repo.artifact.dir>
        <repo.artifact>${repo.artifact.dir}/${project.version}</repo.artifact>
        <repo.artifact.path>${repo.dir}/${repo.artifact}</repo.artifact.path>
        <repo.artifact.file.path>${project.build.directory}/${project.artifactId}-${project.version}</repo.artifact.file.path>
        <repo.artifact.pkg>${project.packaging}</repo.artifact.pkg>
        <repo.artifact.file>${repo.artifact.file.path}.${repo.artifact.pkg}</repo.artifact.file>
        <repo.artifact.sources>${repo.artifact.file.path}-sources.${repo.artifact.pkg}</repo.artifact.sources>
        <repo.artifact.javadoc>${repo.artifact.file.path}-javadoc.${repo.artifact.pkg}</repo.artifact.javadoc>
        <repo.artifact.classifiers>sources,javadoc</repo.artifact.classifiers>
        <repo.symlinks>false</repo.symlinks>
        <repo.noJekyll>true</repo.noJekyll>
        <clean.exclude.defaults>true</clean.exclude.defaults>
        <docker.dir>${basedir}/docker</docker.dir>
        <docker.image>${project.artifactId}-${project.version}</docker.image>
    </properties>

    <distributionManagement>
        <repository>
            <id>${repo.id}</id>
            <name>${repo.name}</name>
            <url>${repo.url}</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>${github.branch}</id>
            <url>${github.repo.url}</url>
            <snapshots>
                <enabled>${github.repo.snapshots}</enabled>
                <updatePolicy>${github.repo.update}</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <developers>
        <developer>
            <id>${github.id}</id>
            <name>${github.name}</name>
            <email></email>
            <url>${github.url}</url>
            <organization></organization>
            <organizationUrl></organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone></timezone>
            <properties></properties>
        </developer>
    </developers>

    <profiles>
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>release</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>3.12.0</version>
                        <executions>
                            <execution>
                                <id>release</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>2.8.1</version>
                        <configuration>
                            <altDeploymentRepository>${repo.id}::default::${repo.url}</altDeploymentRepository>
                            <file>${repo.artifact.file}</file>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>${project.artifactId}</artifactId>
                            <version>${project.version}</version>
                            <packaging>${repo.artifact.pkg}</packaging>
                            <sources>${repo.artifact.sources}</sources>
                            <javadoc>${repo.artifact.javadoc}</javadoc>
                            <classifiers>${repo.artifact.classifiers}</classifiers>
                        </configuration>
                        <executions>
                            <execution>
                                <id>default-deploy</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                                <configuration>
                                    <skip>true</skip>
                                </configuration>
                            </execution>
                            <execution>
                                <id>release</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>src</id>
            <activation>
                <property>
                    <name>src</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>2.1.2</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>doc</id>
            <activation>
                <property>
                    <name>doc</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>3.12.0</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>site</id>
            <activation>
                <property>
                    <name>site</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.github</groupId>
                        <artifactId>site-maven-plugin</artifactId>
                        <version>0.11</version>
                        <configuration>
                            <message>${github.msg}</message> <!-- git commit message -->
                            <noJekyll>${repo.noJekyll}</noJekyll> <!-- disable webpage processing -->
                            <merge>${github.merge}</merge> <!-- не перезаписывать предыдущие артефакты при развертывании -->
                            <outputDirectory>${repo.path}</outputDirectory> <!-- distribution management repository url -->
                            <branch>refs/heads/${github.branch}</branch> <!-- remote branch name -->
                            <includes>
                                <include>${repo.artifact.dir}/*</include>
                                <include>${repo.artifact}/*</include>
                            </includes>
                            <repositoryName>${github.repo}</repositoryName> <!-- github repo name -->
                            <repositoryOwner>${github.id}</repositoryOwner> <!-- github username  -->
                        </configuration>
                        <executions>
                            <!-- run site-maven-plugin's 'site' target as part of the build's normal 'deploy' phase -->
                            <execution>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>site</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>docker</id>
            <activation>
                <property>
                    <name>docker</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.4.10</version>
                        <configuration>
                            <dockerDirectory>${docker.dir}</dockerDirectory>
                            <imageName>${docker.image}</imageName>
                            <!--<dockerHost>https://192.168.65.0:2376</dockerHost>-->
                            <dockerHost>tcp://127.0.0.0:2376</dockerHost>
                            <dockerCertPath>C:\Users\Владелец Super PC\.docker\machine\machines\default</dockerCertPath>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}</directory>
                                    <include>${project.build.finalName}.jar</include>
                                </resource>
                            </resources>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>dockerfile</id>
            <activation>
                <property>
                    <name>dockerfile</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.spotify</groupId>
                        <artifactId>dockerfile-maven-plugin</artifactId>
                        <version>1.4.10</version>
                        <configuration>
                            <!--<buildDirectory>${docker.dir}</buildDirectory>-->
                            <repository>${docker.dir}</repository>
                            <tag>${docker.image}</tag>
                            <skipDockerInfo>true</skipDockerInfo>
                            <pullNewerImage>false</pullNewerImage>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>${res.dir}</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <verbose>true</verbose>
                    <fork>true</fork>
                    <executable><!-- path-to-javac --></executable>
                    <!-- <compilerVersion>1.3</compilerVersion> -->
                    <source>17</source>
                    <target>17</target>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>1.18.30</version>
                        </path>
                        <!-- This is needed when using Lombok 1.18.16 and above -->
                        <!--<path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok-mapstruct-binding</artifactId>
                            <version>0.2.0</version>
                        </path>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>1.5.5.Final</version>
                        </path>-->
                        <!-- other annotation processors -->
                    </annotationProcessorPaths>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.4.0</version>
                <configuration>
                    <!-- не удалять каталог target -->
                    <!-- <excludeDefaultDirectories>${clean.exclude.defaults}</excludeDefaultDirectories> -->
                    <filesets>
                        <fileset>
                            <directory>${repo.artifact.path}</directory>
                            <followSymlinks>${repo.symlinks}</followSymlinks>
                            <includes>
                                <include>**</include> <!-- **/* - файлы | ** - каталог -->
                            </includes>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <altDeploymentRepository>${repo.id}::default::${repo.url}</altDeploymentRepository>
                    <!--<repositoryId>${repo.id}</repositoryId>
                    <url>${repo.url}</url>-->
                    <file>${repo.artifact.file}</file>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <version>${project.version}</version>
                    <!--<packaging>${repo.artifact.pkg}</packaging>-->
                    <!--<pomFile>pom.xml</pomFile>-->
                    <sources>${repo.artifact.sources}</sources>
                    <javadoc>${repo.artifact.javadoc}</javadoc>
                    <classifiers>${repo.artifact.classifiers}</classifiers>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- custom dependencies -->
        <dependency>
            <groupId>org.project</groupId>
            <artifactId>utils</artifactId>
            <version>${utils.ver}</version>
        </dependency>

        <!-- dev dependencies -->
        <!-- test dependencies -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>7.7.1</version>
            <scope>compile</scope>
        </dependency>

        <!--<dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-nop</artifactId>
            <version>1.7.28</version>
            <scope>test</scope>
        </dependency>-->
    </dependencies>
</project>
